<% provide(:title, 'Project') %>
<h2>Project<h2>
<%= link_to 'Create a new project', new_project_path, class: "btn btn-large btn-primary" %> <br /><br />

<table class="table table-hover">
  <tr>
    <th>Project</th>
    <th>Action</th>
  </tr>
<% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, edit_project_path(project) %></td>
    <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Edit', edit_project_path(project) %> | <%= link_to 'Detail', project %></td>
  </tr>
<% end %>
</table>


